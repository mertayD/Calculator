<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/text_View"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#D3D3D3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/text_edit"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_View"
        android:layout_marginTop="6dp"
        android:background="#707070"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:textColor="#000000"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="18dp"
        android:id="@+id/buttonBinary"
        android:layout_below="@id/text_edit"
        android:text="B"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:textColor="#000000"
        android:layout_marginTop="18dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonDecimal"
        android:layout_toRightOf="@id/buttonBinary"
        android:layout_below="@id/text_edit"
        android:text="Dec"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:textColor="#000000"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/buttonBackspace"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/buttonDecimal"
        android:layout_below="@id/text_edit"
        android:text="Back"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/buttonClear"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#D3D3D3"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonBackspace"
        android:layout_below="@id/text_edit"
        android:text="C"
        android:textSize="20sp" />



    <Button
        android:id="@+id/buttonSeven"
        android:background="#707070"
        android:textColor="#FFFFFF"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonBinary"
        android:text="7"
        android:textSize="20sp" />


    <Button
        android:id="@+id/buttonEight"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#707070"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonDecimal"
        android:layout_toRightOf="@id/buttonSeven"
        android:text="8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonNine"
        android:background="#707070"
        android:textColor="#FFFFFF"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonClear"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/buttonEight"
        android:text="9"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonFour"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:background="#707070"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSeven"
        android:text="4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonFive"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:background="#707070"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonEight"
        android:layout_toRightOf="@id/buttonFour"
        android:text="5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonSix"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonNine"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/buttonFive"
        android:background="#707070"
        android:text="6"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <Button
        android:id="@+id/buttonOne"
        android:background="#707070"
        android:textColor="#FFFFFF"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonFour"
        android:text="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonTwo"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#707070"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonFive"
        android:layout_toRightOf="@id/buttonOne"
        android:text="2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonThree"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="6dp"
        android:background="#707070"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSix"
        android:layout_toRightOf="@id/buttonTwo"
        android:text="3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonDot"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#707070"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonOne"
        android:text="."
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonZero"
        android:textColor="#FFFFFF"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="6dp"
        android:background="#707070"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/buttonEight"
        android:layout_below="@id/buttonTwo"
        android:text="0"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonEqual"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#FFA500"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/buttonNine"
        android:textColor="#FFFFFF"
        android:layout_below="@id/buttonThree"
        android:text="="
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonDivide"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#FFA500"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonClear"
        android:layout_toRightOf="@+id/buttonNine"
        android:text="/"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonMultiply"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#FFA500"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDivide"
        android:layout_toRightOf="@+id/buttonSix"
        android:text="*"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonSubtract"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="#FFA500"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMultiply"
        android:layout_toRightOf="@+id/buttonThree"
        android:text="-"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonAdd"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:layout_below="@+id/buttonSubtract"
        android:layout_toRightOf="@+id/buttonEqual"
        android:text="+"
        android:textSize="20sp" />


</RelativeLayout>